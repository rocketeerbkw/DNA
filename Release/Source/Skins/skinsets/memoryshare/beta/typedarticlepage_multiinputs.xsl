	xmlns:s="urn:schemas-microsoft-com:xml-data"
	xmlns:dt="urn:schemas-microsoft-com:datatypes"
	exclude-result-prefixes="msxsl local s dt xhtml">
	
<xsl:variable name="user_intro_fields">
	<![CDATA[<MULTI-INPUT>
		<REQUIRED NAME='TYPE'></REQUIRED>
		<REQUIRED NAME='BODY'><VALIDATE TYPE='EMPTY'/></REQUIRED>
		<REQUIRED NAME='TITLE'></REQUIRED>
		
		<ELEMENT NAME='DATECREATED' EI='add'></ELEMENT>
		<ELEMENT NAME='LASTUPDATED' EI='add'></ELEMENT>
		<ELEMENT NAME='AUTHORNAME' EI='add'></ELEMENT>
		<ELEMENT NAME='AUTHORUSERID' EI='add'></ELEMENT>
